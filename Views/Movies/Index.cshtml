@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-condensed">
    <thead>
        <tr>
            <th><h2>Movies</h2></th>
            <th><h2>Genre</h2></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td>We don't have any movies yet.</td>
            </tr>
        }
        else
        {
            foreach(var movie in Model)
                {
                    <tr>
                        <td>
                            <h3>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</h3>
                        </td>
                        <td>
                            <h3>@movie.Genre.Name</h3>
                        </td>
                    </tr>
                }
        }
    </tbody>
</table>

