@model Vidly.Models.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "New movie";
    if(Model.Movie != null) {
        title = "Edit";
    }
}
<h2>@title</h2>
@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Movie.Name)
        @Html.TextBoxFor(x => x.Movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Movie.ReleasedDate)
        @Html.TextBoxFor(x => x.Movie.ReleasedDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Movie.DateAdded)
        @Html.TextBoxFor(x => x.Movie.DateAdded, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Movie.NumberInStock)
        @Html.TextBoxFor(x => x.Movie.NumberInStock, new { @class = "form-control", @type = "number" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Movie.GenreId)
        @Html.DropDownListFor(x => x.Movie.GenreId, new SelectList(Model.Genre, "Id", "Name", ""), new { @class = "form-control" })
    </div>
    @Html.HiddenFor(x => x.Movie.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}
