@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-condensed">
    <thead>
        <tr>
            <th>
                <h3>Customer</h3>
            </th>
            <th><h3>Membership Type</h3></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td>
                    We don't have any customers yet!
                </td>
            </tr>
        }
        else
        {

            foreach (var customer in Model)
            {
                <tr>
                    <td><h4>@Html.ActionLink(customer.Name, "Details", "Customers", new { id = customer.Id }, null)</h4></td>
                    <td><h4>@customer.MemberShipType.Name</h4></td>
                </tr>
            }
        }
    </tbody>
</table>